[user]
  name = Alex Rodionov
  email = p0deje@gmail.com

[alias]
  unstage = reset HEAD --
  last = log -1 HEAD
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  ls = ls-files
  ctags = !.git/hooks/ctags
  up = pull --rebase --autostash --prune
  done = "!branch=$(git symbolic-ref --short HEAD); git checkout master; git up; git br -D $branch"

[core]
  excludesfile = ~/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = nvim

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = simple

[rebase]
  autosquash = true

[github]
  user = p0deje

[init]
  templatedir = ~/.git_template

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX

[commit]
  verbose = true
