[user]
	name = Alex Rodionov
	email = p0deje@gmail.com

[alias]
	nmerge = merge --no-ff
	unstage = reset HEAD --
	last = log -1 HEAD
	st = status -sb
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	ign = ls-files -o -i --exclude-standard
	cd = checkout development

[core]
	excludesfile = ~/.gitignore
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = /usr/bin/vim

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = simple
