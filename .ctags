--recurse=yes
--tag-relative=yes
--exclude=.git
--exclude=coverage
--exclude=engines
--exclude=node_modules
--exclude=public
--exclude=tmp
--exclude=vendor/bundle

--langdef=markdown
--langmap=markdown:.md
--regex-markdown=/^(#+)[ \t]+([^#]*)/\1 \2/h,heading,Markdown Headers/
--regex-markdown=/\[([^\[]+)\]\(([^\)]+)\)/\1/l,link,Markdown Links/
--regex-markdown=/!\[\]\(.*[\/ ](.*\.[a-z]{3})\)/\1/i,image,Markdown Image/

--langdef=gherkin
--langmap=gherkin:.feature
--regex-gherkin=/^Feature:[ \t]+(.*)/\1/f,Feature/
--regex-gherkin=/^[ \t]+Scenarios?( Outline)?:[ \t]+(.*)/\2/s,Scenario/

--regex-Ruby=/(^|^[[:blank:]]*)task[ \t\:']*([A-Za-z0-9_]*)/\2/t,tasks/
--regex-Ruby=/(^|^[[:blank:]]*)namespace[ \t\:]*([A-Za-z0-9_]*)/\2/n,namespaces/
